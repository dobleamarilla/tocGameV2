    },
    "main": "main.js",
    "scripts": {
        "compile": "tsc",
        "start": "npm run compile && electron main.js",
        "reparar": "npx electron-rebuild -f -p",
        "build:windows": "electron-packager . tocGame --overwrite --platform=win32 --out=windowsBuild --icon=icon.ico",
        "build:linux": "electron-packager . tocGame --overwrite --asar=true --platform=linux --arch=x64 --prune=true --out=linuxBuild --icon=icon.ico",
        "version": "npm run compile && standard-version"
    },
    "dependencies": {
        "escpos": "^3.0.0-alpha.6",
        "escpos-network": "^3.0.0-alpha.5",
        "escpos-serialport": "^3.0.0-alpha.4",
        "escpos-usb": "^3.0.0-alpha.2",
        "is-online": "^8.4.0",
        "jquery": "^3.5.1",
        "moment": "^2.27.0",
        "mongoose": "^5.10.9",
        "nodemailer": "^6.4.11",
        "socket.io-client": "^2.3.1",
        "source-map-support": "^0.5.19"
    },
    "devDependencies": {
        "copyfiles": "2.1.1",
        "electron": "^10.1.3",
        "electron-packager": "^15.1.0",
        "electron-rebuild": "^2.2.0",
        "standard-version": "^9.0.0",
        "typescript": "^4.0.3"
    }
