        "escpos-usb": "^3.0.0-alpha.4",
        "is-online": "^8.5.1",
        "jquery": "^3.5.1",
        "moment": "^2.29.1",
        "mongoose": "^5.11.8",
        "nodemailer": "^6.4.17",
        "socket.io-client": "^2.3.0",
        "source-map-support": "^0.5.19"
    },
    "devDependencies": {
        "copyfiles": "2.1.1",
        "electron": "6.0.0",
        "electron-packager": "^15.2.0",
        "electron-rebuild": "^1.10.1",
        "standard-version": "^9.0.0",
        "typescript": "3.5.3"
    }
